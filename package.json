{
  "name": "gatsby-remark-interactive-gifs",
  "version": "1.0.0",
  "description": "A Gatsby plugin to add interactive animated gifs to markdown files.",
  "main": "index.js",
  "scripts": {
    "build": "rimraf index.js && cross-env BABEL_ENV=production babel src --out-dir .",
    "format": "prettier --write ./{src,specs}/{,**}/*.js",
    "lint": "eslint ./{src,specs}/{,**}/*.js",
    "test": "jest",
    "test:verbose": "jest --verbose",
    "test:coverage": "jest --coverage --runInBand --no-cache",
    "release": "yarn run build && ./node_modules/.bin/standard-version"
  },
  "author": {
    "name": "Clarice Bouwer",
    "email": "clarice@bouwer.dev"
  },
  "homepage": "https://github.com/cbillowes/gatsby-remark-interactive-gifs#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/cbillowes/gatsby-remark-interactive-gifs.git"
  },
  "bugs": {
    "url": "https://github.com/cbillowes/gatsby-remark-interactive-gifs/issues"
  },
  "keywords": [
    "gatsby",
    "gatsbyjs",
    "gatsby-plugin",
    "gatsby-remark",
    "remark",
    "gif",
    "image",
    "embedded",
    "plugin"
  ],
  "license": "MIT",
  "devDependencies": {
    "@babel/cli": "^7.8.4",
    "@babel/core": "^7.9.0",
    "@babel/plugin-proposal-object-rest-spread": "^7.9.5",
    "@babel/plugin-transform-modules-commonjs": "^7.9.0",
    "@babel/plugin-transform-runtime": "^7.9.0",
    "@babel/preset-env": "^7.9.5",
    "@babel/preset-react": "^7.9.4",
    "@types/jest": "^25.2.1",
    "babel-eslint": "^10.1.0",
    "babel-jest": "^25.4.0",
    "babel-plugin-add-module-exports": "^1.0.2",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-filenames": "^1.3.2",
    "eslint-plugin-jest": "^23.8.2",
    "eslint-plugin-json": "^2.1.1",
    "eslint-plugin-prettier": "^3.1.3",
    "jest": "^25.4.0",
    "prettier": "^2.0.5",
    "remark": "^12.0.0",
    "cross-env": "^7.0.2",
    "rimraf": "^3.0.2",
    "standard-version": "^7.1.0"
  },
  "peerDependencies": {
    "gatsby": "*",
    "gatsby-transformer-remark": "*",
    "react": "*"
  },
  "jest": {
    "transform": {
      "^.+\\.jsx?$": "babel-jest"
    },
    "transformIgnorePatterns": [
      "/node_modules/"
    ],
    "moduleFileExtensions": [
      "js",
      "jsx",
      "ts",
      "tsx"
    ],
    "testMatch": [
      "**/specs/**/*[.-][Ss]pec{,s}.{j,t}s{,x}"
    ],
    "rootDir": ".",
    "verbose": false,
    "resetMocks": true,
    "resetModules": true,
    "collectCoverageFrom": [
      "src/*.{j,t}s{,x}",
      "!**/*.min.js",
      "!**/static/**",
      "!**/specs/**",
      "!**/node_modules/**"
    ]
  },
  "babel": {
    "presets": [
      [
        "@babel/preset-env",
        {
          "forceAllTransforms": true,
          "targets": {
            "node": true
          }
        }
      ],
      "@babel/preset-react"
    ],
    "plugins": [
      "add-module-exports",
      "@babel/plugin-transform-runtime",
      "@babel/plugin-proposal-object-rest-spread"
    ]
  },
  "eslintConfig": {
    "parser": "babel-eslint",
    "parserOptions": {
      "sourceType": "module"
    },
    "extends": [
      "eslint:recommended",
      "prettier"
    ],
    "plugins": [
      "jest",
      "json",
      "prettier",
      "filenames"
    ],
    "env": {
      "es6": true,
      "node": true,
      "jest": true
    },
    "rules": {
      "semi": "off",
      "no-undef": "off",
      "no-unused-vars": "off",
      "no-dupe-class-members": "off",
      "require-jsdoc": "off",
      "valid-jsdoc": [
        "error",
        {
          "preferType": {
            "any": "*",
            "Boolean": "boolean",
            "Number": "number",
            "Object": "object",
            "String": "string",
            "return": "returns"
          },
          "requireReturnType": false,
          "requireParamDescription": false,
          "requireReturnDescription": false
        }
      ],
      "quotes": [
        "error",
        "backtick",
        {
          "avoidEscape": true
        }
      ],
      "no-console": "off",
      "filenames/no-index": "off",
      "filenames/match-exported": [
        "error",
        [
          null,
          "kebab",
          "camel"
        ]
      ],
      "jest/no-disabled-tests": "error",
      "jest/no-focused-tests": "error",
      "jest/no-identical-title": "error",
      "jest/valid-expect": "error",
      "prettier/prettier": "error"
    }
  }
}
